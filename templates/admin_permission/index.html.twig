{% extends 'base.html.twig' %}

{% block title %}Liste des Permissions
{% endblock %}

{% block body %}
	<main class="container mt-3">
		<section class="row card">
			<div class="col 12 pt-3 card-header">
				<h1 class="pt-3">Liste des Permissions</h1>
			</div>
			<table>
				<thead>
					<th>Nom</th>
					<th>Description</th>
					<th>install√©e</th>
				</thead>
				<tbody>
					{% for permission in permission %}
						<tr class="categorie pt-3">
							<td class="border">{{ permission.name }}</td>
							<td class="border">{{ permission.description }}</td>

							{% if permission.install == '1' %}
								<td class="border">oui</td>
							{% else %}
								<td class="border">non</td>
							{% endif %}

							<td>
								<a class="btn btn-primary border" href="{{ path('admin_modifier_permission', {'id': permission.id}) }}">Modifier une permission</a>
							</td>
						</tr>

					{% else %}
						<p>Aucune permission inscrite</p>
					{% endfor %}
				</tbody>
			</table>
		</section>
	</main>
{% endblock %}

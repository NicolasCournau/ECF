{% extends 'base.html.twig' %}

{% block title %}Liste des Permissions
{% endblock %}

{% block body %}
	<main class="container ">
		<section class="row">
			<div class="col-12">
				{% if app.user %}
					<h2>Liste des Permissions</h2>
					<table>
						<thead>
							<th>Nom</th>
							<th>Description</th>
							<th>install√©e</th>
						</thead>
						<tbody>
							{% for permission in permission %}
								<tr class="categorie">
									<td>{{ permission.name }}</td>
									<td>{{ permission.description }}</td>
									{% if app.user and permission.install == '1' %}
										<td>oui</td>
									{% else %}
										<td>non</td>
									{% endif %}
								</tr>
							</div>
						</tbody>
					</tr>

				{% else %}
					<p>Aucune permission pour vos structures</p>
				{% endfor %}
			</tbody>
		</div>
	</table>
{% else %}
	<h1>Connectez-vous pour voir vos droits</h1>
{% endif %}</section></main>{% endblock %}
